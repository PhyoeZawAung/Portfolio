---
const { href, text } = Astro.props;
---

<a
    href={href}
    class="group relative overflow-hidden rounded-md text-sm font-medium text-gray-800 dark:text-gray-50 mx-2"
>
    <!-- Hover -->
    <span
        class="absolute inset-0 transform transition-transform translate-y-full group-hover:-translate-y-0 duration-300 ease-in-out text-pink-400 dark:text-indigo-400"
        >{text}</span
    >
    <!-- Normal -->
    <span
        class="block transition-transform duration-300 ease-in-out group-hover:-translate-y-full"
        >{text}</span
    >
</a>
